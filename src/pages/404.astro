---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout pageTitle="404 - Page Not Found | Paul Savvas" pageDescription="The page you're looking for doesn't exist.">
  <div class="min-h-screen bg-white font-sans dark:bg-neutral-950 transition-colors flex items-center justify-center">
    <main class="mx-auto w-full max-w-6xl bg-white px-6 py-24 dark:bg-neutral-950 sm:px-16 animate-fade-in text-center">
      <div class="animate-fade-in-up">
        <h1 class="text-9xl font-bold text-neutral-900 dark:text-neutral-100">404</h1>
        <h2 class="mt-4 text-3xl font-semibold tracking-tight text-neutral-900 dark:text-neutral-100">
          Page not found
        </h2>
        <p class="mt-6 text-base leading-7 text-neutral-700 dark:text-neutral-300">
          Sorry, we couldn't find the page you're looking for.
        </p>
        <div class="mt-10">
          <a
            href="/"
            class="inline-flex items-center justify-center rounded-md border border-neutral-200 bg-white px-4 py-2 text-sm font-medium text-neutral-900 transition-colors hover:bg-neutral-50 dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-100 dark:hover:bg-neutral-900 hover-lift"
          >
            Go back home
          </a>
        </div>
      </div>
    </main>
  </div>
</BaseLayout>
