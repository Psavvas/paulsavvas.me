---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const pageTitle = 'Blog | Paul Savvas';
const pageDesc =
  'Blog posts by Paul Savvas â€” project notes, lessons learned, and build write-ups.';

const allPosts = await getCollection('blog');

// Strip file extension from id to get a clean slug
function slugFromId(id: string) {
  return id.replace(/\.mdx?$/, '');
}

// Sort newest-first by date string (ISO format)
const sortedPosts = allPosts.sort((a, b) => {
  const da = new Date(a.data.date).getTime();
  const db = new Date(b.data.date).getTime();
  return db - da;
});

const tagCls =
  'inline-flex items-center rounded-full bg-neutral-100 px-3 py-1 text-xs font-medium text-neutral-700 dark:bg-neutral-900 dark:text-neutral-300';
const btnCls =
  'inline-flex items-center justify-center rounded-md border border-neutral-200 bg-white px-4 py-2 text-sm font-medium text-neutral-900 transition-colors hover:bg-neutral-50 dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-100 dark:hover:bg-neutral-900 hover-lift';
---

<BaseLayout title={pageTitle} description={pageDesc}>
  <div
    class="min-h-screen bg-white font-sans dark:bg-neutral-950 transition-colors"
  >
    <main
      class="mx-auto w-full max-w-6xl bg-white px-6 py-16 dark:bg-neutral-950 sm:px-16 sm:py-24 animate-fade-in"
    >
      <header class="max-w-3xl animate-fade-in-up">
        <p
          class="text-sm font-medium uppercase tracking-wider text-neutral-600 dark:text-neutral-400"
        >
          Blog
        </p>
        <h1
          class="mt-3 text-4xl font-semibold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-5xl"
        >
          Notes and write-ups
        </h1>
        <p
          class="mt-6 text-base leading-7 text-neutral-700 dark:text-neutral-300"
        >
          Short posts about projects, engineering decisions, and what I learn
          while building.
        </p>
      </header>

      <section class="mt-14 max-w-3xl">
        {
          sortedPosts.length === 0 ? (
            <div class="rounded-xl border border-neutral-200 bg-white p-6 dark:border-neutral-800 dark:bg-neutral-950 hover-lift">
              <h2 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100">
                Coming soon
              </h2>
              <p class="mt-3 text-sm leading-6 text-neutral-700 dark:text-neutral-300">
                I'm working on the first set of posts now.
              </p>
            </div>
          ) : (
            <div class="grid gap-6">
              {sortedPosts.map((post) => (
                <article class="rounded-xl border border-neutral-200 bg-white p-6 dark:border-neutral-800 dark:bg-neutral-950 hover-lift animate-fade-in-up">
                  <div class="flex flex-col gap-1 sm:flex-row sm:items-baseline sm:justify-between">
                    <h2 class="text-xl font-semibold tracking-tight text-neutral-900 dark:text-neutral-100">
                      <a
                        href={`/blog/${slugFromId(post.id)}`}
                        class="hover:underline"
                      >
                        {post.data.title}
                      </a>
                    </h2>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">
                      {post.data.date}
                    </p>
                  </div>

                  <p class="mt-3 text-sm leading-6 text-neutral-700 dark:text-neutral-300">
                    {post.data.summary}
                  </p>

                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="mt-4 flex flex-wrap gap-2">
                      {post.data.tags.map((t: string) => (
                        <span class={tagCls}>{t}</span>
                      ))}
                    </div>
                  )}

                  <div class="mt-6">
                    <a class={btnCls} href={`/blog/${slugFromId(post.id)}`}>
                      Read post
                    </a>
                  </div>
                </article>
              ))}
            </div>
          )
        }
      </section>
    </main>
  </div>
</BaseLayout>
