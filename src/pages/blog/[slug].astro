---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import MainLayout from '../../layouts/MainLayout.astro';

type BlogEntry = {
  slug: string;
  data: {
    title: string;
    date: string;
    summary: string;
    tags?: string[];
  };
  render: () => Promise<{ Content: any }>;
};

export const getStaticPaths = (async () => {
  const allBlogPosts = await getCollection('blog');
  return allBlogPosts.map((item: BlogEntry) => ({
    params: { slug: item.slug },
    props: { postData: item },
  }));
}) satisfies GetStaticPaths;

const { postData } = Astro.props;
const { Content } = await postData.render();
const metadata = postData.data;
---

<MainLayout 
  pageTitle={metadata.title} 
  pageDescription={metadata.summary}
>
  <div class="min-h-screen bg-white font-sans dark:bg-neutral-950 transition-colors">
    <main class="mx-auto w-full max-w-6xl bg-white px-6 py-16 dark:bg-neutral-950 sm:px-16 sm:py-24 animate-fade-in">
      <div class="max-w-3xl">
        <a
          href="/blog"
          class="inline-flex items-center text-sm font-medium text-neutral-600 transition-colors hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100 animate-slide-in-left"
        >
          ‚Üê Back to Blog
        </a>

        <header class="mt-8 animate-fade-in-up">
          <p class="text-sm text-neutral-600 dark:text-neutral-400">
            {metadata.date}
          </p>
          <h1 class="mt-3 text-4xl font-semibold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-5xl">
            {metadata.title}
          </h1>
          <p class="mt-6 text-base leading-7 text-neutral-700 dark:text-neutral-300">
            {metadata.summary}
          </p>

          {metadata.tags && metadata.tags.length > 0 && (
            <div class="mt-6 flex flex-wrap gap-2">
              {metadata.tags.map((tag) => (
                <span class="inline-flex items-center rounded-full bg-neutral-100 px-3 py-1 text-xs font-medium text-neutral-700 dark:bg-neutral-900 dark:text-neutral-300">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </header>

        <article class="mt-10 space-y-5 animate-fade-in-up prose prose-neutral dark:prose-invert max-w-none">
          <Content />
        </article>
      </div>
    </main>
  </div>
</MainLayout>
