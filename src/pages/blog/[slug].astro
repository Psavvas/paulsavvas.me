---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { loadBlogEntryByIdentifier, fetchAllBlogIdentifiers } from '../../lib/blogLoader';

export const prerender = true;

export async function getStaticPaths() {
  const identifiers = fetchAllBlogIdentifiers();
  return identifiers.map((id) => ({
    params: { slug: id },
  }));
}

const { slug } = Astro.params;
const entry = loadBlogEntryByIdentifier(slug!);

if (!entry) {
  return Astro.redirect('/404');
}

const { heading, publishedDate, excerpt, topicTags, markdownContent } = entry;
---

<BaseLayout pageTitle={`${heading} | Paul Savvas`} pageDescription={excerpt}>
  <div class="min-h-screen bg-white font-sans dark:bg-neutral-950 transition-colors">
    <main class="mx-auto w-full max-w-6xl bg-white px-6 py-16 dark:bg-neutral-950 sm:px-16 sm:py-24 animate-fade-in">
      <div class="max-w-3xl">
        <a
          href="/blog"
          class="inline-flex items-center text-sm font-medium text-neutral-600 transition-colors hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100 animate-slide-in-left"
        >
          ‚Üê Back to Blog
        </a>

        <header class="mt-8 animate-fade-in-up">
          <p class="text-sm text-neutral-600 dark:text-neutral-400">
            {publishedDate}
          </p>
          <h1 class="mt-3 text-4xl font-semibold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-5xl">
            {heading}
          </h1>
          <p class="mt-6 text-base leading-7 text-neutral-700 dark:text-neutral-300">
            {excerpt}
          </p>

          {topicTags && topicTags.length > 0 && (
            <div class="mt-6 flex flex-wrap gap-2">
              {topicTags.map((tag) => (
                <span
                  class="inline-flex items-center rounded-full bg-neutral-100 px-3 py-1 text-xs font-medium text-neutral-700 dark:bg-neutral-900 dark:text-neutral-300"
                >
                  {tag}
                </span>
              ))}
            </div>
          )}
        </header>

        <article class="mt-10 space-y-5 animate-fade-in-up prose prose-neutral dark:prose-invert max-w-none" set:html={markdownContent}>
        </article>
      </div>
    </main>
  </div>
</BaseLayout>
