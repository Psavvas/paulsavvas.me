---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Contact | Paul Savvas';
const pageDesc =
  'Contact Paul Savvas â€” reach out about projects, collaboration, or questions.';

const emailAddr = 'hello@paulsavvas.me';
const ghUrl = 'https://github.com/psavvas';
const liUrl = 'https://linkedin.com/in/pauldsavvas';
const grUrl = 'https://gravatar.com/paulsavvas';
const tvUrl = 'https://thingiverse.com/psavvas';
const formUrl = 'https://psavvas.notion.site/15770b9af471809da736d4e77a090ce0';

const cardCls =
  'rounded-xl border border-neutral-200 bg-white p-6 dark:border-neutral-800 dark:bg-neutral-950 hover-lift animate-fade-in-up';
const actionCls =
  'inline-flex items-center justify-center rounded-md border border-neutral-200 bg-white px-4 py-2 text-sm font-medium text-neutral-900 transition-colors hover:bg-neutral-50 dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-100 dark:hover:bg-neutral-900 hover-lift';

const socialCards = [
  {
    heading: 'LinkedIn',
    blurb: 'Connect with me on LinkedIn.',
    cta: 'View LinkedIn',
    href: liUrl,
    icon: 'ðŸ’¼',
  },
  {
    heading: 'Gravatar',
    blurb: 'View my Gravatar profile, and other social profiles.',
    cta: 'View Gravatar',
    href: grUrl,
    icon: 'ðŸ‘¤',
  },
  {
    heading: 'GitHub',
    blurb: 'Get access to my open source coding projects.',
    cta: 'View GitHub',
    href: ghUrl,
    icon: 'ðŸ’»',
  },
  {
    heading: 'Thingiverse',
    blurb: 'Explore my 3D designs and projects.',
    cta: 'View Thingiverse',
    href: tvUrl,
    icon: 'ðŸ”§',
  },
];
---

<BaseLayout title={pageTitle} description={pageDesc}>
  <div
    class="min-h-screen bg-white font-sans dark:bg-neutral-950 transition-colors"
  >
    <main
      class="mx-auto w-full max-w-6xl bg-white px-6 py-16 dark:bg-neutral-950 sm:px-16 sm:py-24 animate-fade-in"
    >
      <header class="max-w-3xl animate-fade-in-up">
        <p
          class="text-sm font-medium uppercase tracking-wider text-neutral-600 dark:text-neutral-400"
        >
          Contact
        </p>
        <h1
          class="mt-3 text-4xl font-semibold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-5xl"
        >
          Let's connect.
        </h1>
        <p
          class="mt-6 text-base leading-7 text-neutral-700 dark:text-neutral-300"
        >
          If you have a question, want to collaborate, or want to talk through a
          project idea, the links below are the best way to reach me.
        </p>
      </header>

      <!-- Primary cards -->
      <section class="mt-14 grid gap-10 md:grid-cols-2">
        <div class={cardCls}>
          <h2
            class="text-lg font-semibold text-neutral-900 dark:text-neutral-100"
          >
            Contact Form
          </h2>
          <p
            class="mt-3 text-sm leading-6 text-neutral-700 dark:text-neutral-300"
          >
            Message me using the form below. I try to respond as soon as
            possible.
          </p>
          <div
            class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between"
          >
            <a class={actionCls} href={formUrl}>Open form</a>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              paulsavvas.me/redirect/contact
            </p>
          </div>
        </div>

        <div class={cardCls}>
          <h2
            class="text-lg font-semibold text-neutral-900 dark:text-neutral-100"
          >
            Email
          </h2>
          <p
            class="mt-3 text-sm leading-6 text-neutral-700 dark:text-neutral-300"
          >
            Contact me via email, and I'll make sure to try to respond within 3
            business days.
          </p>
          <div
            class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between"
          >
            <a class={actionCls} href={`mailto:${emailAddr}`}>Send email</a>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {emailAddr}
            </p>
          </div>
        </div>
      </section>

      <!-- Social cards -->
      <section class="mt-14 grid gap-10 md:grid-cols-4">
        {
          socialCards.map((sc) => (
            <div class={cardCls}>
              <div class="flex items-center gap-2">
                <span class="text-2xl" aria-hidden="true">
                  {sc.icon}
                </span>
                <h2 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100">
                  {sc.heading}
                </h2>
              </div>
              <p class="mt-3 text-sm leading-6 text-neutral-700 dark:text-neutral-300">
                {sc.blurb}
              </p>
              <div class="mt-6">
                <a
                  class={actionCls}
                  href={sc.href}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {sc.cta}
                </a>
              </div>
            </div>
          ))
        }
      </section>
    </main>
  </div>
</BaseLayout>
