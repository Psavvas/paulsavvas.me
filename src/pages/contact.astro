---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Contact | Paul Savvas';
const pageDesc =
  'Contact Paul Savvas â€” reach out about projects, collaboration, or questions.';

const emailAddr = 'hello@paulsavvas.me';
const ghUrl = 'https://github.com/psavvas';
const liUrl = 'https://linkedin.com/in/pauldsavvas';
const grUrl = 'https://gravatar.com/paulsavvas';
const tvUrl = 'https://thingiverse.com/psavvas';
const formUrl = 'https://psavvas.notion.site/15770b9af471809da736d4e77a090ce0';

const cardCls =
  'rounded-xl border border-neutral-200 bg-white p-6 dark:border-neutral-800 dark:bg-neutral-950 hover-lift animate-fade-in-up';
const actionCls =
  'inline-flex items-center justify-center rounded-md border border-neutral-200 bg-white px-4 py-2 text-sm font-medium text-neutral-900 transition-colors hover:bg-neutral-50 dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-100 dark:hover:bg-neutral-900 hover-lift';

const socialCards = [
  {
    heading: 'LinkedIn',
    blurb: 'Connect with me on LinkedIn.',
    cta: 'View LinkedIn',
    href: liUrl,
  },
  {
    heading: 'Gravatar',
    blurb: 'View my Gravatar profile, and other social profiles.',
    cta: 'View Gravatar',
    href: grUrl,
  },
  {
    heading: 'GitHub',
    blurb: 'Get access to my open source coding projects.',
    cta: 'View GitHub',
    href: ghUrl,
  },
  {
    heading: 'Thingiverse',
    blurb: 'Explore my 3D designs and projects.',
    cta: 'View Thingiverse',
    href: tvUrl,
  },
];
---

<BaseLayout title={pageTitle} description={pageDesc}>
  <div
    class="min-h-screen bg-white font-sans dark:bg-neutral-950 transition-colors"
  >
    <main
      class="mx-auto w-full max-w-6xl bg-white px-6 py-16 dark:bg-neutral-950 sm:px-16 sm:py-24 animate-fade-in"
    >
      <header class="max-w-3xl animate-fade-in-up">
        <p
          class="text-sm font-medium uppercase tracking-wider text-neutral-600 dark:text-neutral-400"
        >
          Contact
        </p>
        <h1
          class="mt-3 text-4xl font-semibold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-5xl"
        >
          Let's connect.
        </h1>
        <p
          class="mt-6 text-base leading-7 text-neutral-700 dark:text-neutral-300"
        >
          If you have a question, want to collaborate, or want to talk through a
          project idea, the links below are the best way to reach me.
        </p>
      </header>

      <!-- Primary cards -->
      <section class="mt-14 grid gap-10 md:grid-cols-2">
        <div class={cardCls}>
          <div class="flex items-center gap-2">
            <svg
              class="h-5 w-5 text-neutral-700 dark:text-neutral-300"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            <h2
              class="text-lg font-semibold text-neutral-900 dark:text-neutral-100"
            >
              Contact Form
            </h2>
          </div>
          <p
            class="mt-3 text-sm leading-6 text-neutral-700 dark:text-neutral-300"
          >
            Message me using the form below. I try to respond as soon as
            possible.
          </p>
          <div
            class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between"
          >
            <a class={actionCls} href={formUrl}>Open form</a>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              paulsavvas.me/redirect/contact
            </p>
          </div>
        </div>

        <div class={cardCls}>
          <div class="flex items-center gap-2">
            <svg
              class="h-5 w-5 text-neutral-700 dark:text-neutral-300"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <h2
              class="text-lg font-semibold text-neutral-900 dark:text-neutral-100"
            >
              Email
            </h2>
          </div>
          <p
            class="mt-3 text-sm leading-6 text-neutral-700 dark:text-neutral-300"
          >
            Contact me via email, and I'll make sure to try to respond within 3
            business days.
          </p>
          <div
            class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between"
          >
            <a class={actionCls} href={`mailto:${emailAddr}`}>Send email</a>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {emailAddr}
            </p>
          </div>
        </div>
      </section>

      <!-- Social cards -->
      <section class="mt-14 grid gap-10 md:grid-cols-4">
        {
          socialCards.map((sc) => (
            <div class={cardCls}>
              <div class="flex items-center gap-2">
                {sc.heading === 'LinkedIn' && (
                  <svg
                    class="h-5 w-5 text-neutral-700 dark:text-neutral-300"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                )}
                {sc.heading === 'Gravatar' && (
                  <svg
                    class="h-5 w-5 text-neutral-700 dark:text-neutral-300"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    />
                  </svg>
                )}
                {sc.heading === 'GitHub' && (
                  <svg
                    class="h-5 w-5 text-neutral-700 dark:text-neutral-300"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                      clip-rule="evenodd"
                    />
                  </svg>
                )}
                {sc.heading === 'Thingiverse' && (
                  <svg
                    class="h-5 w-5 text-neutral-700 dark:text-neutral-300"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                    />
                  </svg>
                )}
                <h2 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100">
                  {sc.heading}
                </h2>
              </div>
              <p class="mt-3 text-sm leading-6 text-neutral-700 dark:text-neutral-300">
                {sc.blurb}
              </p>
              <div class="mt-6">
                <a
                  class={actionCls}
                  href={sc.href}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {sc.cta}
                </a>
              </div>
            </div>
          ))
        }
      </section>
    </main>
  </div>
</BaseLayout>
