---
import { ClientThemeProvider } from '../components/ClientThemeProvider';
import NavigationBar from '../components/Navbar.astro';
import SiteFooter from '../components/Footer.astro';
import '../styles/global.css';

interface LayoutProps {
  pageTitle: string;
  pageDescription: string;
}

const { pageTitle, pageDescription } = Astro.props;
const fullTitle = pageTitle.includes('Paul Savvas') ? pageTitle : `${pageTitle} | Paul Savvas`;
const siteUrl = 'https://paulsavvas.me';
---

<!DOCTYPE html>
<html lang="en" class="theme-uninitialized">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{fullTitle}</title>
    <meta name="description" content={pageDescription} />
    
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:locale" content="en_US" />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    
    <script is:inline>
      const storedTheme = localStorage.getItem('theme-preference');
      const systemPreference = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      const activeTheme = storedTheme === 'system' || !storedTheme ? systemPreference : storedTheme;
      
      if (activeTheme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
      document.documentElement.classList.remove('theme-uninitialized');
    </script>
  </head>
  <body class="antialiased">
    <ClientThemeProvider client:load attribute="class" defaultTheme="system" enableSystem enableColorScheme>
      <NavigationBar />
      <slot />
      <SiteFooter />
    </ClientThemeProvider>
  </body>
</html>

<style is:global>
  .theme-uninitialized {
    visibility: hidden;
  }
</style>
